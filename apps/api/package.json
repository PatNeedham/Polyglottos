{
  "name": "api",
  "version": "0.0.1",
  "scripts": {
    "start": "NODE_ENV=development tsx src/local.ts",
    "build": "npx wrangler deploy",
    "db:generate": "npx drizzle-kit generate:sqlite ./src/db/schema.ts",
    "db:push": "DATABASE_URL=\"file:./polyglottos.db\" drizzle-kit push:sqlite --schema=./src/db/schema.ts",
    "seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "@hono/node-server": "^1.13.7",
    "better-sqlite3": "^11.7.0",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.2",
    "hono": "^4.6.14",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "wrangler": "^3.0.0"
  }
}
